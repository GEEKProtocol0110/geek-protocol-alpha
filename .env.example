# ==================================================================
# GEEK PROTOCOL - ENVIRONMENT CONFIGURATION
# ==================================================================
# Copy this file to .env and update with your local/production values
# See README.md for detailed setup instructions

# ==================================================================
# DATABASE CONFIGURATION
# ==================================================================
# PostgreSQL connection string
# Format: postgresql://[user]:[password]@[host]:[port]/[database]
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/geek_protocol"

# ==================================================================
# REDIS CONFIGURATION
# ==================================================================
# Redis connection for queue system and caching
REDIS_HOST="localhost"
REDIS_PORT="6379"
REDIS_PASSWORD=""  # Leave empty for local development

# ==================================================================
# API SERVER CONFIGURATION
# ==================================================================
# Port for the Fastify API server
PORT=3002
HOST="0.0.0.0"

# Node environment: development | production | test
NODE_ENV="development"

# CORS origin for frontend (comma-separated for multiple origins)
CORS_ORIGIN="http://localhost:3000"
FRONTEND_URL="http://localhost:3000"

# ==================================================================
# SECURITY & AUTHENTICATION
# ==================================================================
# JWT secret for session tokens (MUST be changed in production)
# Generate with: openssl rand -base64 32
JWT_SECRET="your-secure-jwt-secret-min-32-chars-please-change-this"

# JWT expiration time
JWT_EXPIRES_IN="7d"

# HMAC secret for quiz attempt token validation
# Generate with: openssl rand -base64 32
HMAC_SECRET="your-secure-hmac-secret-min-32-chars-please-change-this"

# Attempt token secret for quiz validation
# Generate with: openssl rand -base64 32
ATTEMPT_TOKEN_SECRET="your-secure-attempt-token-secret-please-change-this"

# ==================================================================
# REWARD SYSTEM CONFIGURATION
# ==================================================================
# Enable/disable reward distribution (true | false)
ENABLE_REWARDS="false"

# Minimum score percentage (0-100) required for reward eligibility
MIN_SCORE_FOR_REWARD="70"

# Reward amount in sats per correct answer
REWARD_SATS_PER_CORRECT="750"

# Simulated confirmation delay (milliseconds)
REWARD_CONFIRM_DELAY_MS="5000"

# Require KasWare wallet signature verification
REWARD_REQUIRE_WALLET="true"

# GEEK token holding requirement (in satoshis)
GEEK_HOLD_REQUIREMENT="1000"

# ==================================================================
# KASPA BLOCKCHAIN CONFIGURATION
# ==================================================================
# Kaspa network: mainnet | testnet
KASPA_NETWORK="testnet"

# Kaspa RPC endpoint for blockchain interactions
KASPA_RPC_URL="https://testnet.kaspa.org/api"

# Kasplex API for token operations
KASPLEX_API_URL="https://kasplex-testnet.herokuapp.com"

# Kaspa wallet address for reward distribution (Production Only)
# KASPA_WALLET_ADDRESS="kaspa:your_wallet_address_here"

# Kaspa wallet private key (NEVER commit this to version control)
# KASPA_PRIVATE_KEY="your_private_key_here"

# ==================================================================
# NEXT.JS WEB APP CONFIGURATION
# ==================================================================
# Base URL for API requests from the frontend
NEXT_PUBLIC_API_URL="http://localhost:3002"

# Public app URL (used for absolute URLs in meta tags, etc.)
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# ==================================================================
# LOGGING CONFIGURATION
# ==================================================================
# Log level: fatal | error | warn | info | debug | trace
LOG_LEVEL="info"

# Enable pretty logging in development (true | false)
LOG_PRETTY="true"

# ==================================================================
# RATE LIMITING CONFIGURATION
# ==================================================================
# Maximum requests per time window
RATE_LIMIT_MAX="100"

# Time window in milliseconds
RATE_LIMIT_WINDOW="900000"  # 15 minutes

# ==================================================================
# TESTING CONFIGURATION
# ==================================================================
# Test database URL (use separate database for tests)
# TEST_DATABASE_URL="postgresql://postgres:postgres@localhost:5432/geek_protocol_test"

# ==================================================================
# DEPLOYMENT CONFIGURATION (Production Only)
# ==================================================================
# Vercel/deployment-specific variables
# VERCEL_URL="your-app.vercel.app"
# VERCEL_ENV="production"

# Sentry DSN for error tracking (optional)
# SENTRY_DSN="your_sentry_dsn_here"

# ==================================================================
# DEMO MODE
# ==================================================================
# Enable demo mode for testing without real transactions
DEMO_MODE="false"

# ==================================================================
# OPTIONAL: ANALYTICS & MONITORING
# ==================================================================
# Google Analytics ID (optional)
# NEXT_PUBLIC_GA_ID="G-XXXXXXXXXX"
